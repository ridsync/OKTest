<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_relativelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SclablelayoutFragment"
    android:orientation="horizontal">

    <com.example.test.oktest.ScalableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_sl"
        android:background="@android:color/darker_gray"
        sl:scale_base_width="300"
        sl:scale_base_height="300" >

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:orientation="horizontal"
            sl:scale_left="10"
            sl:scale_top="100"
            sl:scale_width="90"
            sl:scale_height="90">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="oktser1111"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="okser2222"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </LinearLayout>

        <TextView
            android:id="@+id/sl_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:text="@string/hello_world"
            android:textColor="@android:color/white"
            sl:scale_left="20"
            sl:scale_top="40"
            sl:scale_height="30"
            sl:scale_width="100"
            sl:scale_textsize="20"
            sl:textview_wrapcontent_direction="top"
            sl:textview_wrapcontent_resizesurrounded="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            sl:scale_left="190"
            sl:scale_top="40"
            sl:scale_width="30"
            sl:scale_height="30" />
    </com.example.test.oktest.ScalableLayout>

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="oktser1111"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="okser2222"
            android:textAppearance="@android:style/TextAppearance.Medium" />

    </LinearLayout>

</LinearLayout>